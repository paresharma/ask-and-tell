<% if @_ok %>

  document.querySelector("#answers").insertAdjacentHTML('afterbegin', "<%= j render(@answer) %>")

  document.querySelector("#new_answer").innerHTML = "<%= j render('answers/form', answer: @answer.question.answers.build) %>"

<% else %>

  document.querySelector("#new_answer").innerHTML = "<%= j render('answers/form', answer: @answer) %>"

<% end %>
