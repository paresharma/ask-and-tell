<%
    html = render(
      'shared/paginated_records',
      next_page_path: question_answers_path(
        params[:question_id],
        page: @page.next_number
      ),
      previous_page_path: question_answers_path(
        params[:question_id],
        page: @page.number - 1
      ),
      options: { remote: true }
    )
%>

document.querySelector("#answers").innerHTML = "<%= j html %>"
var search = "?page=<%= @page.number %>"
if(search != window.location.search)
  history.pushState({}, "", search)
